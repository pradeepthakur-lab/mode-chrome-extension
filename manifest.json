{
    "manifest_version": 3,
    "name": "Dark Mode",
    "description": "If you feeling bored of looking at websites the same way? Meet Mode, a chrome extension that can change your website from dark mood to light mode! ",
    "version": "1.0.0",
    "content_scripts": [{
        "js": ["popup.js"],
        "matches": ["http://*/*","https://*/*","<all_urls>"]
    }], 
    "icons": {
        "16": "icon16.png",
        "48": "moon.png",
        "128": "icon128.png"
    },
    "action": {
        "default_icon": "moon.png",
        "default_title": "Web Mode",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://*.example.org/"
    ]
}